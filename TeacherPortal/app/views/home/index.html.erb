<h1 class="index">TechCaFE Games Teacher Portal</h1>
<div class="home-container">
	<div class="home-left">
		<%= image_tag("game-icon.png") %>
		<p>
			Help students learn better through educational games.
		</p>	
	</div>
	<div class="home-right">
		<%= image_tag("question-icon.png") %>
		<p>
			Easily manage questions and content sets used in TechCaFE games.
		</p>
	</div>

	<% if !current_user %>
		<div class="actions home">
		    <%= link_to 'Login', login_path, :class=>'btn btn-primary btn-large login' %>
		    <%= link_to 'Sign Up', signup_path, :class=>'btn btn-info btn-large' %>
		</div>
	<% end %>

</div>
